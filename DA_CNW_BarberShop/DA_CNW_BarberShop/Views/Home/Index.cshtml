@* Banner đặt lịch *@
<div id="banner" class="banner" style="background-image: url(../../assets/Images/211001_BANNER_WEB_30SHINE_w.jpg)">
    <span class="banner-control banner-control--left" onclick="clickNextSlide()">
        <i class="banner-control__icon fa fa-angle-left" aria-hidden="true"></i>
    </span>
    <div class="banner-model">
        <div class="banner-model__heading">
            <span class="banner-model__heading--main">ĐẶT LỊCH GIỮ CHỖ CHỈ 30 GIÂY</span>
            <span class="banner-model__heading--sub">Cắt xong trả tiền, hủy lịch không sao</span>
        </div>
        @*@Html.BeginForm("showViewMain", "DatLich") {*@
        <div class="banner-model__control">
            <input type="text" id="txtInputPhone" name="sdt" class="banner-model__input" placeholder="Nhập SĐT để đặt lịch">
            <button class="banner-model__button btn" id="banner-model__btn">đặt lịch ngay</button>
            <button class="banner-model__button btn banner-model__button--mobile" id="banner-model__btn-mobile">đặt ngay</button>
        </div>
        @*}*@
